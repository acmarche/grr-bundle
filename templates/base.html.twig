<!doctype html>
<html lang="fr">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Grr{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/grr/favicon.ico') }}"/>
    {% block stylesheets %}{% endblock %}

    <link href="{{ asset('bundles/grr/css/app.css') }}" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.1/css/bootstrap.min.css"
          integrity="sha384-VCmXjywReHh4PwowAiWNagnWcLhlEJLA5buUprzK8rxFgeH0kww/aWY76TfkUoSX" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    {% block head_scripts %}{% endblock %}
</head>
<body>
{# MENU TOP #}
<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">

    {% block brand %}
        <a class="navbar-brand" href="{{ path('grr_homepage') }}">Grr</a>
    {% endblock %}
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04"
            aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="container">
        <div class="collapse navbar-collapse" id="navbarsExample04">
            <ul class="navbar-nav mr-auto">
                {% block menu_top %}
                {% endblock %}
            </ul>
            <ul class="navbar-nav">
                {% block menu_user %}
                    {% include '@Grr/security/_menu_user.html.twig' %}
                {% endblock %}
            </ul>
            <form class="form-inline my-2 my-md-0">
                <!--   <input class="form-control" type="text" placeholder="{{ 'placeholder.search'|trans }}"> -->
            </form>
        </div>
    </div>
</nav>
{# END MENU TOP #}
<main role="main" class="container-fluid pt-3">

    {% include '@Grr/_flash_messages.html.twig' %}

    {% block body %}

    {% endblock %}
</main>

{% block footer %}
    <footer class="mb-5 hidden-print">

    </footer>
{% endblock %}

{% block javascripts %}{% endblock %}

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->

<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
        integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.1/js/bootstrap.min.js"
        integrity="sha384-XEerZL0cuoUbHE4nZReLT7nx9gQrQreJekYhJD9WNWhH8nEW+0c5qq7aIo2Wl30J"
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>
<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>
{% block scripts %}

{% endblock %}
</body>
</html>

