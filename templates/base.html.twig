<!doctype html>
<html lang="fr" class="h-100">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Réservation - Grr{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/grr/favicon.ico') }}"/>
    {% block stylesheets %}{% endblock %}
    <link href="{{ asset('bundles/grr/css/print.css') }}" rel="stylesheet" media="print">
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_script_tags('app') }}

</head>
<body class="d-flex flex-column h-100 {% block body_class %}{% endblock %}">
{% set action = app.request.attributes.get("_route") %}
<div class="container">
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
        <a href="{{ path('grr_homepage') }}"
           class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
            <i class="fa fa-cross"></i>
            <span class="ms-2 fs-4">Réservation</span>
        </a>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {% block menu_top %}
                {% include '@Grr/security/_menu_user.html.twig' %}
            {% endblock %}
        {% else %}
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="{{ path('app_login') }}" class="nav-link" title="Connexion">
                        <i class="fas fa-sign-in-alt"></i> Me connecter</a>
                </li>
            </ul>
        {% endif %}

    </header>
</div>

<main role="main" class="container pt-3">

    {% include '@Grr/_flash_messages.html.twig' %}

    {% block notifications %}

    {% endblock %}

    {% block body %}

    {% endblock %}
</main>

{% block footer %}
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted"> </span>
        </div>
    </footer>
{% endblock %}

<script>
    /** todo
     $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })**/
</script>

{% block scripts %}{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>



