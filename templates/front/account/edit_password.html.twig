{% extends '@grr_front/layout_front.html.twig' %}

{% block title %}{{ 'user.password.title'|trans({}) }}{% endblock %}

{% block body %}
    <div class="card mb-3">
        <div class="card-header">
            <h3>{{ 'user.changepassword.title'|trans }} {{ user }}</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary">{{ button_label|default('label.btn.save') | trans({}) }}</button>
            {{ form_end(form) }}
        </div>
    </div>
    <br/>
    <a href="{{ path('grr_account_show',{'id': user.id}) }}"><i
                class="ti ti-arrow-left"></i> {{ 'label.btn.cancel'|trans({}) }}</a>
{% endblock %}
