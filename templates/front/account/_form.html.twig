{{ form_start(form) }}
{{ form_errors(form) }}

<div class="row">
    <div class="col-6">
        {{ form_row(form.name) }}
    </div>
    <div class="col-6">
        {{ form_row(form.first_name) }}
    </div>
</div>

<div class="row">
    <div class="col-6">
        {{ form_row(form.email) }}
    </div>
    <div class="col-6">
        {{ form_row(form.username) }}
    </div>
</div>

<div class="row">
    <div class="col-6">
        {{ form_row(form.area) }}
    </div>
    <div class="col-6">
        {{ form_row(form.room) }}
    </div>
</div>

<button class="btn btn-primary"><i
            class="far fa-save"></i> {{ button_label|default('form.btn.save') | trans({}) }}</button>

{{ form_end(form) }}

