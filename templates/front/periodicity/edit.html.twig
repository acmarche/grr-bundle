{% extends '@grr_front/layout_front.html.twig' %}

{% block title %}{{ entry.name }}{% endblock %}

{% block body %}

    <div class="card mb-3">
        <div class="card-header">
            <h2>{{ entry.name }}</h2>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="row">
                <div class="col-6">
                    {% include '@grr_front/entry/form/_form_entry.html.twig' %}
                </div>
                <div class="col-6">
                    {% include '@grr_front/entry/form/_form_periodicity.html.twig' %}
                </div>
            </div>
            <button class="btn btn-primary" type="submit"><i
                        class="ti ti-device-floppy"></i> {{ 'label.btn.save'|trans({}) }}</button>
            {{ form_end(form) }}
        </div>
    </div>

    <br/>
    <a href="{{ path('grr_front_entry_show',{'id': entry.id}) }}"><i
                class="ti ti-arrow-left"></i> {{ 'label.btn.cancel'|trans({}) }}</a>

{% endblock %}
