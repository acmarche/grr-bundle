<a href="{{ url_back }}" class="btn btn-primary" role='button'><i class="ti ti-list"></i>
    {{ 'back.to_planning'|trans({}) }}
</a>

{% if entry.periodicity %}
    {# EDIT #}
    {% if is_granted('grr.entry.edit', entry) %}
        <div class="btn-group" role="group">
            <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                <i class="ti ti-pencil"></i> {{ 'label.btn.edit'|trans({}) }}
            </button>
            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">

                <a href="{{ path('grr_front_entry_edit', { 'id': entry.id }) }}" role="button"
                   class="dropdown-item"> {{ 'label.btn.edit_entry'|trans({}) }}</a>

                <a href="{{ path('grr_front_periodicity_edit', { 'id': entry.id }) }}" role="button"
                   class="dropdown-item"> {{ 'label.btn.edit_periodicity'|trans({}) }}</a>

            </div>
        </div>
    {% endif %}

    {% if is_granted('grr.entry.delete', entry) %}
        {# DELETE #}
        <div class="btn-group" role="group">
            <button id="btnGroupDrop1" type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                <i class="ti ti-trash"></i> {{ 'label.btn.delete'|trans({}) }}
            </button>
            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                <button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    {{ 'label.btn.delete_entry'|trans({}) }}
                </button>
                <button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#deleteModalPeriodicity">
                    {{ 'label.btn.delete_periodicity'|trans({}) }}
                </button>
            </div>
        </div>
    {% endif %}
{% else %}
    {% if is_granted('grr.entry.edit', entry) %}
        <a href="{{ path('grr_front_entry_edit', { 'id': entry.id }) }}" role="button"
           class="btn btn-primary"><i class="ti ti-pencil"></i> {{ 'label.btn.edit_entry'|trans({}) }}</a>

    {% endif %}
    {% if is_granted('grr.entry.delete', entry) %}
        <a href="{{ url_back }}" class="btn btn-danger" role='button' data-bs-toggle="modal" data-bs-target="#deleteModal"><i
                    class="ti ti-trash"></i>
            {{ 'label.btn.delete'|trans({}) }}
        </a>
    {% endif %}
{% endif %}

