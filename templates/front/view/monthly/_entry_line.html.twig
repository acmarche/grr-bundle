<div class="p-2 mb-1 border-bottom border-start border-2" style="border-color: {{ entry.type.color }}!important;">
    <a class="" href="{{ path('grr_front_entry_show', {'id': entry.id}) }}">
        {{ entry.name }}
    </a>
    {% if entry.description %}
        <br/>
        <span class="text-muted">{{ entry.description | u.truncate(20, '...') }}</span>
    {% else %}
        <br/>
    {% endif %}

    <span class="text-muted">
    {{ entry.startTime|date('H:i') }}
    - {{ entry.endtime|date('H:i') }}
             </span>
    <br/>
    <span class="font-weight-bold">
                {{ entry.room }}
            </span>
</div>
