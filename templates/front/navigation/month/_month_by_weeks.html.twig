<div class="row">
    <div class="col-3 text-left">
        <a href="">Previous</a>
    </div>

    <div class="col-6 text-center">
        <a href="" class="font-weight-bold">

        </a>
        <hr>
        <p class="font-weight-bold">
            <a href="">
                {{ 'Today' | trans }}
            </a>
        </p>
    </div>
    <div class="col-3 text-right">
        <a href="">Next</a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-bordered table-sm">
        <thead>
        <tr>
            <th class="text-center">
                <span class="d-none d-sm-block">{{ 'week.name'|trans }}</span> {# hidden xs #}
                <span class="d-sm-none">{{ 'week.name'|trans[:1] }}</span>{# hidden wider than lg #}
            </th>
            {% for dayName in listDays %}
                <th scope="col" class="text-center">
                    <span class="d-none d-sm-block">{{ dayName|trans }}</span> {# hidden xs #}
                    <span class="d-sm-none">{{ dayName|trans[:3] }}</span>{# hidden wider than lg #}
                </th>
            {% endfor %}
        </tr>
        </thead>
        <tbody>
        {% for week in weeks %}

            {% if week.startDate.week == date.week %}
                {% set class = "table-info" %}
            {% else %}
                {% set class = "" %}
            {% endif %}

            <tr class="{{ class }}">
                {% include '@grr_front/navigation/month/_cell_week.html.twig' with {'numericWeek': week.startDate.week } %}
                {% for day in week %}
                    {% include '@grr_front/navigation/month/_cell_day.html.twig' with { 'day': day } %}
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
