{% extends '@grr_admin/layout_admin.html.twig' %}

{% block title %}{{ 'page.admin.title'|trans }}{% endblock %}

{% block body %}
    <h3>{{ 'grr.title'|trans }} </h3>

    <div class="row">
        <div class="col-md-3 col-12">
            <img src="{{ asset('bundles/grr/images/totem_grr.png') }}" alt="grr" class="thumbnail">
        </div>
        <div class="col-md-4 col-12">
            <ul class="list-group mt-5">
                {% if is_granted(constant('Grr\\Core\\Security\\SecurityRole::ROLE_GRR_MANAGER_USER')) %}
                    <li class="list-group-item"><a
                                href="{{ path('grr_admin_user_index') }}">{{ 'label.btn.user.manage'|trans }}</a></li>
                {% endif %}
                <li class="list-group-item"><a
                            href="{{ path('grr_admin_area_index') }}">{{ 'label.btn.area.manage'|trans }}</a></li>
                {% if is_granted(constant('Grr\\Core\\Security\\SecurityRole::ROLE_GRR_ADMINISTRATOR')) %}
                    <li class="list-group-item"><a
                                href="{{ path('grr_admin_setting_index') }}">{{ 'label.btn.setting.manage'|trans }}</a>
                    </li>
                    <li class="list-group-item"><a
                                href="{{ path('grr_admin_type_entry_index') }}">{{ 'label.btn.typeEntry.manage'|trans }}</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
{% endblock %}
