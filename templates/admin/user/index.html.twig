{% extends '@grr_admin/layout_admin.html.twig' %}

{% block title %}{{ 'user.index.title'|trans({'length': users|length}) }}{% endblock %}

{% block body %}

    <div class="card mb-3">
        <div class="card-header">
            <h3>{{ 'user.index.title'|trans({'length': users|length}) }}
                <a class="float-end btn btn-primary" href="{{ path('grr_admin_user_new') }}">
                    <i class="ti ti-plus"></i> {{ 'label.btn.user.add'| trans({}) }}</a>
            </h3>
        </div>
        <div class="card-body">

            {% include '@grr_admin/search/_user.html.twig' %}

            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>{{ 'user.name'| trans }}</th>
                    <th>{{ 'user.email'| trans }}</th>
                    <th>{{ 'user.username'| trans }}</th>
                    <th>{{ 'user.isEnabled'| trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.name }} {{ user.firstName }}</td>
                        <td>
                            <a href="{{ path('grr_admin_user_show', {'id': user.id}) }}">{{ user.email }}</a>
                        </td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.isEnabled }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">{{ 'records.not_found'|trans({}) }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
