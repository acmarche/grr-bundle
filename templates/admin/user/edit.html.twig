{% extends '@grr_admin/layout_admin.html.twig' %}

{% block title %}{{ user.email }}{% endblock %}

{% block body %}
    <div class="card mb-3">
        <div class="card-header">
            <h3>{{ user.email }}</h3>
        </div>
        <div class="card-body">
            {{ include('@grr_admin/user/_form.html.twig', {'button_label': 'label.btn.save'}) }}
        </div>

        <div class="card-footer">
            <a href="{{ path('grr_admin_user_show',{'id': user.id}) }}"><i
                        class="fas fa-arrow-left"></i> {{ 'label.btn.cancel'|trans({}) }}</a>
        </div>
    </div>
{% endblock %}
