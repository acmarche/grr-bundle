{% extends '@grr_front/layout_front.html.twig' %}

{% block title %}{{'page.not_found'|trans}}{% endblock %}

{% block body %}
    <div class="card bg-light mb-3">
        <div class="card-header">
            <h2>{{'page.not_found'|trans}}: {{ status_text }}</h2>
        </div>
        <div class="card-body">

            <p>
                <a href="{{ path('grr_home') }}">{{'return.homepage'|trans}}</a>
            </p>

            <img src="{{ asset('bundles/grr/images/totem_grr.png') }}" alt="grr">
        </div>
    </div>
{% endblock %}
